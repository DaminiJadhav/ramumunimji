        <TextView
            android:id="@+id/textResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeOtp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:fontFamily="@font/ralewayregular"
            android:text="Resend OTP ?"
            android:textColor="#a8a8a8"
            android:textSize="@dimen/_14sdp" />

        <View
            android:id="@+id/divider_outstanding"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textResend"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:background="@color/black" />

        <Button
            android:id="@+id/btn_submit"
            style="@style/fill_button_style"
            android:layout_below="@id/textResend"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:background="@drawable/btn_rectangle_shape"
            android:text="@string/submit"
            android:textSize="@dimen/_15sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textStyle="bold" />
